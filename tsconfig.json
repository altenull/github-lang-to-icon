{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "strict": true,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
